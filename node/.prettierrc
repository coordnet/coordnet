{
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 100,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": ["frontend/**/*.{js,jsx,ts,tsx}"],
      "options": {
        "plugins": [
          "prettier-plugin-tailwindcss",
          "prettier-plugin-classnames",
          "prettier-plugin-merge"
        ],
        "customFunctions": ["clsx"],
        "tailwindFunctions": ["clsx"]
      }
    }
  ]
}
